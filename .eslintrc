{
  "rules": {
    "sourceType": "module",
    "quotes": [2, "single"],
    "linebreak-style": [2, "unix"],
    "no-console": 0,
    "max-len": [1, 160],
    "quote-props": [1, "consistent-as-needed"],
    "no-cond-assign": [2, "except-parens"],
    "radix": 0,
    "keyword-spacing": 0,
    "one-var": 0,
    "func-names": 0,
    "padded-blocks": 0,
    "computed-property-spacing": [2, "always"],
    "space-infix-ops": 0,
    "no-unused-vars": [1, { "vars": "local", "args": "none" }],
    "space-before-function-paren": 2,
    "key-spacing": [
      2,
      { "align": "colon", "beforeColon": true, "afterColon": true },
    ],
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true,
  },
  "globals": {
    "describe": true,
    "it": true,
    "beforeEach": true,
    "expect": true,
    "unique": true,
  },
}
